# Environment variables for Sleep Monitoring Backend
# Copy this file to .env and update with your actual values

# Flask Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=True
HOST=0.0.0.0
PORT=5000

# Database
DATABASE_PATH=sensor_data.db

# ESP32 Communication
SERIAL_PORT=/dev/ttyUSB0
BAUD_RATE=115200

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://192.168.1.100:3000

# Development Settings
SIMULATION_MODE=True

# Sensor Thresholds
HEART_RATE_MIN=30
HEART_RATE_MAX=200
BREATHING_RATE_MIN=5
BREATHING_RATE_MAX=60
WEIGHT_MAX=500

# Update Intervals (seconds)
HEART_RATE_INTERVAL=2
BREATHING_INTERVAL=2
GYROSCOPE_INTERVAL=1
WEIGHT_INTERVAL=5
SNORE_INTERVAL=3

# Raspberry Pi GPIO Pins
FAN_PIN=18
SPEAKER_PIN=19
LED_STRIP_PIN=21
PILLOW_SERVO_PIN=12

# Alert Thresholds
HIGH_HEART_RATE_THRESHOLD=100
LOW_HEART_RATE_THRESHOLD=50
BAD_POSTURE_ANGLE=30
POOR_POSTURE_ANGLE=15

# Sleep Detection
SLEEP_DETECTION_WEIGHT_THRESHOLD=30
INACTIVITY_SLEEP_THRESHOLD=900

# Data Retention
DATA_RETENTION_DAYS=90
